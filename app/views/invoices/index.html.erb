<h1>Your Invoices</h1>
<%= link_to 'New Invoice', new_invoice_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.title %></td>
        <td><%= number_to_currency(invoice.amount) %></td>
        <td><%= invoice.due_date %></td>
        <td>
          <%= link_to 'Show', invoice_path(invoice), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-warning' %>
          <%= link_to 'Delete', invoice_path(invoice), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
